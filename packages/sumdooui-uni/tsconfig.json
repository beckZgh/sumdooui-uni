{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "esnext",
        "outDir": "dist",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": [
            "@dcloudio/types"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./**/*.vue",
    ]
}
