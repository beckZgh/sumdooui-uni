        // 共享页面
        {
            "path": "pages/common/coding/main"
        }
    ],


    // https://uniapp.dcloud.net.cn/collocation/pages.html#globalstyle
    "globalStyle": {
        "navigationBarTitleText": "Sumdoo Weapp",
        "navigationStyle": "custom",
        "navigationBarTextStyle": "black"
	},

    // https://uniapp.dcloud.net.cn/collocation/pages.html#tabbar
    "tabBar": {
        "color": "#333333",
        "selectedColor": "#465CFF",
        "backgroundColor": "#FFFFFF",
        "list": [
            {
                "pagePath": "pages/tabbar/home/main",
                "text": "组件",
                "iconPath": "static/tabbar/assembly_default_3x.png",
                "selectedIconPath": "static/tabbar/assembly_selected_3x.png"
            },
            {
                "pagePath": "pages/tabbar/tools/main",
                "text": "工具",
                "iconPath": "static/tabbar/layout_default_3x.png",
                "selectedIconPath": "static/tabbar/layout_selected_3x.png"
            },
            {
                "pagePath": "pages/tabbar/template/main",
                "text": "模板",
                "iconPath": "static/tabbar/mod_default_3x.png",
                "selectedIconPath": "static/tabbar/mod_selected_3x.png"
            },
            {
                "pagePath": "pages/tabbar/my/main",
                "text": "我的",
                "iconPath": "static/tabbar/my_default_3x.png",
                "selectedIconPath": "static/tabbar/my_selected_3x.png"
            }
        ]
    },

    // https://uniapp.dcloud.net.cn/collocation/pages.html#easycom
    "easycom": {
        "autoscan": true,
        "custom": {
            "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
            "^sd-(.*)": "@/sumdooui-uni/$1/$1.vue",
            "^app-(.*)": "@/components/app-$1.vue"
        }
    }
}
