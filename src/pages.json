    // https://uniapp.dcloud.net.cn/collocation/pages.html#pages
    "pages": [
        {
            "path": "pages/tabbar/home/main"
        }, {
            "path": "pages/tabbar/tools/main"
        }, {
            "path": "pages/tabbar/template/main"
        }, {
            "path": "pages/tabbar/my/main"
        },

        // 基础组件
        {
            "path": "pages/examples/basics/color/main"
        }, {
            "path": "pages/examples/basics/icon/main"
        }, {
            "path": "pages/examples/basics/button/main"
        }, {
            "path": "pages/examples/basics/animation/main"
        }, {
            "path": "pages/examples/basics/animate-box/main"
        },

        // 布局组件
        {
            "path": "pages/examples/layout/page/main"
        },{
            "path": "pages/examples/layout/cell/main"
        },

        // 导航组件
        {
            "path": "pages/examples/nav/navbar/main"
        },

        // 数据组件
        {
            "path": "pages/examples/data/badge/main"
