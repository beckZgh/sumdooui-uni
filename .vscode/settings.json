{
    "files.associations": {
        "pages.json": "jsonc",
        "manifest.json": "jsonc"
    },
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        // "**/node_modules": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/dist": true,
    }
}
